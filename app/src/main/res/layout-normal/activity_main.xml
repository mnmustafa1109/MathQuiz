<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Math Quiz"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="114dp" />


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:max="2"
            android:progress="1"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="280dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:text="time pass"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="226dp"
            tools:layout_editor_absoluteY="222dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="127dp"
            android:layout_height="35dp"
            android:layout_above="@+id/seekBar"
            android:layout_marginEnd="-38dp"
            android:layout_marginRight="-38dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/text"
            android:layout_toLeftOf="@id/text"
            android:text="lazy dog"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="222dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_marginStart="-25dp"
            android:layout_marginLeft="-25dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/text"
            android:layout_toRightOf="@id/text"
            android:text="challenger"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="387dp"
            tools:layout_editor_absoluteY="223dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="439dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:onClick="goto_addition"
            android:text="ADDITION"
            android:textColor="#fafafa"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:onClick="goto_subtraction"
            android:text="SUBTRACTION"
            android:textColor="#fafafa"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:onClick="goto_multiplication"
            android:text="MULTIPLICATION"
            android:textColor="#fafafa"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:onClick="goto_division"
            android:text="DIVISION"
            android:textColor="#fafafa"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>